    //////////////////////////// TextInputLayout ////////////////////////////////////////////

    <!--
    1. colorControlActivated is the floating label, underline and cursor colors, when focused. If you don’t define it, it will fall back to use your colorAccent

    2. colorControlNormal is the underline color, when the view is NOT focused. If you don’t define it, it will fall back to use your textColorSecondary which is a bit.

    3. textColorPrimary is the color of the user-input text

    4. textColorHint is the hint color when the field is empty and NOT focused.-->


    <style name="temp_textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- reference our hint & error styles -->
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="hintTextAppearance">@style/textInputLayoutHintText</item>
        <item name="errorTextAppearance">@style/textInputLayoutErrorText</item>
        <item name="helperTextTextAppearance">@style/textInputLayoutHelperText</item>
        <item name="android:textColorPrimary">@color/main_white</item>
        <item name="android:textColorHint">@color/main_medium_grey</item>
        <item name="colorControlNormal">@color/main_medium_grey</item>
        <item name="colorControlActivated">@color/main_white</item>
        <item name="colorControlHighlight">@color/main_white</item>
        <item name="hintTextColor">@color/main_white</item>
    </style>



    <style name="textInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- reference our hint & error styles -->
        <item name="android:theme">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="hintTextAppearance">@style/textInputLayoutHintText</item>
        <item name="errorTextAppearance">@style/textInputLayoutErrorText</item>
        <item name="helperTextTextAppearance">@style/textInputLayoutHelperText</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/main_medium_grey</item>
        <item name="colorControlNormal">@color/main_grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="TextInputEditText.OutlinedBox.CustomFont" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/metropolis_light</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/TextInputEditText.OutlinedBox.CustomFont</item>
    </style>


    <style name="textInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="android:textColorPrimary">@color/main_medium_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="android:textColorPrimary">@color/colorMain_light_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="android:textColorPrimary">@color/main_errorColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textInputLayoutBorderStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/main_medium_grey</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


