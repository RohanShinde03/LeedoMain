        <item name="android:textColorHint">@color/main_medium_grey</item>
    </style>

    <!-- medium style-->
    <style name="styleFontMediumText">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/main_medium_grey</item>
