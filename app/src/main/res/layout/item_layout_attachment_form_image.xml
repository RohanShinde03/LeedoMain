    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_flatAttachment_form"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/def_image_no_attachment"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"
        app:riv_corner_radius="16dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/main_medium_grey"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="false" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_flatAttachment_close"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignEnd="@+id/iv_flatAttachment_form"
        android:padding="5dp"
        android:background="@drawable/bg_circle_drawable_close">

    </androidx.appcompat.widget.AppCompatImageView>


