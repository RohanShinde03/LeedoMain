<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tribeappsoft.leedo.salesPerson.bookings.AddHoldFlatActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_white">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_addHoldFlat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:isScrollContainer="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg_grey">


                <!-- Inventory Selection  -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_addHoldFlat_inventorySelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/main_white"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:hint="@string/select_project"
                            android:background="@color/main_white">

                            <AutoCompleteTextView
                                android:id="@+id/acTv_addHoldFlat_select_project"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ellipsize="end"
                                android:textSize="14sp"
                                android:theme="@style/styleFontRegularText"
                                android:background="@color/main_white"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:hint="@string/select_block"
                            android:background="@color/main_white">

                            <AutoCompleteTextView
                                android:id="@+id/acTv_addHoldFlat_selectBlock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ellipsize="end"
                                android:textSize="14sp"
                                android:theme="@style/styleFontRegularText"
                                android:background="@color/main_white"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- gone button-->
                    <!-- <com.google.android.material.button.MaterialButton
                         android:id="@+id/mBtn_holdFlat_view_inventory"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/inventory"
                         android:visibility="gone"
                         style="@style/coloredButton"
                         android:layout_gravity="center"
                         android:layout_marginTop="5dp"
                         android:layout_marginBottom="5dp"
                         app:textAllCaps="false"
                         android:paddingLeft="40dp"
                         android:paddingRight="40dp"
                         android:paddingTop="12dp"
                         android:paddingBottom="12dp"
                         app:cornerRadius="50dp"
                         app:icon="@drawable/ic_remove_red_eye_black_24dp"
                         android:drawablePadding="20dp" />-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:theme="@style/styleFontBoldText"
                            android:text="@string/hold_flats" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_addHoldFlat_flat_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="3"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:theme="@style/styleFontBoldText"
                            android:layout_gravity="end" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_addHoldFlat_legends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="18dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/circle_shape_drawable_available"
                                android:theme="@style/styleFontMediumText"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="@string/available_flats"
                                android:drawablePadding="5dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!--  Display Dynamic Flow Layout  -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_addHoldFlat_viewFloorMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/styleFontMediumText"
                        android:textSize="16sp"
                        android:text="@string/select_flat_from_available_floors"
                        android:gravity="center|start"
                        android:padding="5dp"
                        android:layout_margin="5dp" />

                    <!-- Add Floors -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_addHoldFlat_addFloor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.core.widget.NestedScrollView>


        <!--Selected Block Layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_addHoldFlat_proceed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_grey"
            android:elevation="3dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_text" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/selected_flat"
                    android:textAlignment="textStart"
                    android:textColor="@color/color_flat_available"
                    android:textSize="20sp"
                    android:theme="@style/styleFontMediumText" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_addHoldFlat_closeProceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/ic_search_close_icon"
                    android:contentDescription="@string/app_name"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <!--Block Stats-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <!--Available Blocks-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center|start">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_addHoldFlat_selectedFlat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/styleFontRegularText"
                        android:textSize="14sp"
                        android:text="A-801 | 2BHK"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="start"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mBtn_addHoldFlat_proceed"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/proceed"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:cornerRadius="30dp"
                        android:padding="5dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sfl_salesPerson_flatOnHold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:visibility="visible"
        android:orientation="vertical">
        <include layout="@layout/layout_add_flathold_placeholder" />

    </com.facebook.shimmer.ShimmerFrameLayout>


    <!-- pb layout -->
    <include layout="@layout/pb_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>