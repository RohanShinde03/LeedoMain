<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_itemProjectDocs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/transition_string"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:strokeColor="#BABABA"
    app:strokeWidth="1dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_itemProjectDocs_docImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@color/main_light_grey" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_itemProjectDocs_docName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_description_black_24dp"
                    android:drawablePadding="5dp"
                    android:text="@string/card_title"
                    android:gravity="center|start"
                    android:textColor="@color/main_black"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:theme="@style/styleFontMediumText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_itemProjectDocs_docDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/card_title"
                    android:gravity="center|start"
                    android:textColor="@color/main_grey"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:theme="@style/styleFontMediumText" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BABABA"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>




                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center|start">

                    <!-- update document -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_itemProjectDocs_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_delete_grey_24dp"
                        android:drawablePadding="5dp"
                        android:layout_gravity="center|start"
                        android:textColor="@color/black"
                        android:theme="@style/styleFontMediumText"
                        android:textSize="16dp"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center|end">

                        <!-- download document -->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:clickable="true">

                            <ProgressBar
                                android:id="@+id/pb_itemProjectDocs_downloadDoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center|end"
                                style="?android:attr/progressBarStyleSmall"
                                android:visibility="gone"
                                android:indeterminateDuration="2000"
                                android:indeterminate="true"
                                android:indeterminateTintMode="src_atop"
                                android:indeterminateTint="@color/colorAccent" />
                            <!--  style="@style/Widget.AppCompat.ProgressBar" -->

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_itemProjectDocs_downloadIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_remove_red_eye_black_24dp"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <!-- share document -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_itemProjectDocs_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:gravity="center|end"
                            android:drawableStart="@drawable/ic_share_black_24dp"
                            android:drawablePadding="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:theme="@style/styleFontMediumText"
                            android:textSize="16dp"/>

                        <!-- update document -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_itemProjectDocs_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_edit_black_24dp"
                            android:drawablePadding="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:theme="@style/styleFontMediumText"
                            android:textSize="16dp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>




                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>



</com.google.android.material.card.MaterialCardView>