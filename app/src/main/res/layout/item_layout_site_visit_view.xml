<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Project Name-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_itemGhpDetails_sv_projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/project_name"
            android:textAlignment="textStart"
            android:textColor="@color/main_black"
            android:textSize="14sp"
            android:theme="@style/styleFontMediumText" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/color_card_sub_title"
            android:visibility="visible" />

        <!--Unit Type-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_itemLeadDetails_sv_unitType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/def_unit_type"
            android:textColor="@color/main_black"
            android:textSize="14sp"
            android:theme="@style/styleFontMediumText"
            android:visibility="visible" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Project Name-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Visit Date - "
            android:textAlignment="textStart"
            android:textColor="@color/color_card_sub_title"
            android:textSize="14sp"
            android:theme="@style/styleFontMediumText" />

        <!--Unit Type-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_itemGhpDetails_visit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/date"
            android:textColor="@color/main_black"
            android:textSize="14sp"
            android:theme="@style/styleFontMediumText"
            android:visibility="visible" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Project Name-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Remark - "
            android:textAlignment="textStart"
            android:textColor="@color/color_card_sub_title"
            android:textSize="14sp"
            android:theme="@style/styleFontMediumText" />

        <!--Unit Type-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_itemGhpDetails_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/date"
            android:textColor="@color/main_black"
            android:textSize="14sp"
            android:theme="@style/styleFontMediumText"
            android:visibility="visible" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>