<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tribeappsoft.leedo.admin.callLog.CallLogActivity">

    <!-- call log main -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_callLog_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:layout_weight="1">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg_grey">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/main_white"
                    android:padding="15dp">

                    <!-- call log date time -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/call_date_time"
                            android:theme="@style/styleFontMediumText"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17sp"
                            android:gravity="center|start"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout.OutlineBox.CustomFont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:endIconDrawable="@drawable/ic_date"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:hint="@string/call_log_at"
                            app:endIconMode="custom">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_callLog_dateTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/styleFontMediumText"
                                android:inputType="none"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="15sp"
                                android:textColor="@color/BlackLight"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- call status -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/main_white">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:hint="@string/call_status_">

                            <AutoCompleteTextView
                                android:id="@+id/acTv_callLog_callStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ellipsize="end"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/BlackLight"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- call start time and end time -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_white"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout.OutlineBox.CustomFont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            app:endIconDrawable="@drawable/ic_access_time_black_24dp"
                            app:endIconMode="custom">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_callLog_startTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/call_start_time_star"
                                android:inputType="none"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText"
                                android:textSize="15sp"
                                android:textColor="@color/main_black"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout.OutlineBox.CustomFont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            app:endIconDrawable="@drawable/ic_access_time_black_24dp"
                            app:endIconMode="custom">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_callLog_endTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/call_end_time_star"
                                android:inputType="none"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="15sp"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText"
                                android:textColor="@color/main_black"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- call details -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayout.OutlineBox.CustomFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:hint="@string/call_remarks_star"
                        android:theme="@style/styleFontMediumText"
                        android:textColorHint="@color/grey_m">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_callLog_callDetails"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:inputType="textPersonName|textMultiLine"
                            android:textColor="@color/BlackLight"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:maxLines="7"
                            android:ellipsize="end"
                            android:gravity="start"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="6dp" />

                <!-- reminder details -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/main_white"
                    android:orientation="vertical">

                    <!-- set reminder text-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_callLog_setReminderMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center">


                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sm_callLog_setReminder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:textSize="18sp"
                            style="@style/Widget.MaterialComponents.CompoundButton.Switch"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="@string/set_reminder"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- set reminder details -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_callLog_viewReminderData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"
                            android:background="@color/lighter" />

                        <!-- details -->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/reminder_date"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                app:endIconDrawable="@drawable/ic_date"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText"
                                app:endIconMode="custom">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_callLog_reminder_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textSize="15sp"
                                    android:textColor="@color/BlackLight"
                                    android:singleLine="true" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:hint="@string/reminder_time"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText"
                                app:endIconDrawable="@drawable/ic_access_time_black_24dp"
                                app:endIconMode="custom">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_callLog_reminder_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textSize="15sp"
                                    android:textColorHint="@color/grey_m"
                                    android:theme="@style/styleFontMediumText"
                                    android:textColor="@color/BlackLight"
                                    android:singleLine="true" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:theme="@style/styleFontMediumText"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:backgroundTint="@color/colorPrimary"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/remind_me_about"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_callLog_reminderText"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:textColorHint="@color/grey_m"
                                    android:textColor="@color/BlackLight"
                                    android:ellipsize="end"
                                    android:visibility="gone"
                                    android:gravity="top|start"
                                    android:theme="@style/editTextMultiline"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textSize="20sp"
                                    android:scrollbars="vertical"
                                    android:scrollbarStyle="insideInset"
                                    android:overScrollMode="always"
                                    android:singleLine="false"
                                    android:lines="4"
                                    android:lineSpacingExtra="5dp"
                                    android:fontFamily="@font/metropolis_light"
                                    android:focusable="true"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

                <!-- reminder details -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white"
                    android:orientation="vertical">

                    <!-- set reminder text-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_callLog_setNewScheduleCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center">


                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/sm_callLog_setScheduleCall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:textSize="18sp"
                            style="@style/Widget.MaterialComponents.CompoundButton.Switch"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/metropolis_medium"
                            android:text="@string/schedule_call"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- set reminder details -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_callLog_viewScheduleCallData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"
                            android:background="@color/lighter" />


                        <!-- date and time selection, remarks  -->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/main_white"
                            android:padding="15dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_addCallSchedule_callScheduleDate"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:endIconDrawable="@drawable/ic_date"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:hint="@string/call_schedule_date"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText"
                                app:endIconMode="custom">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_addCallSchedule_callScheduleDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:textColorHint="@color/grey_m"
                                    android:theme="@style/styleFontMediumText"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textSize="15sp"
                                    android:textColor="@color/main_black"
                                    android:singleLine="true" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_addCallSchedule_callScheduleTime"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:layout_marginBottom="@dimen/dimen_12dp"
                                android:textColorHint="@color/grey_m"
                                android:theme="@style/styleFontMediumText"
                                app:endIconDrawable="@drawable/ic_access_time_black_24dp"
                                app:endIconMode="custom">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_addCallSchedule_callScheduleTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/call_schedule_time"
                                    android:inputType="none"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textSize="15sp"
                                    android:textColorHint="@color/grey_m"
                                    android:theme="@style/styleFontMediumText"
                                    android:textColor="@color/BlackLight"
                                    android:singleLine="true" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- call schedule remarks -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_addCallSchedule_remarks"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:theme="@style/styleFontMediumText"
                                android:hint="@string/call_schedule_remarks"
                                android:textColorHint="@color/grey_m">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_addCallSchedule_remarks"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:inputType="textPersonName|textMultiLine"
                                    android:textColor="@color/BlackLight"
                                    android:textColorHint="@color/grey_m"
                                    android:theme="@style/styleFontMediumText"
                                    android:maxLines="5"
                                    android:ellipsize="end"
                                    android:gravity="start"/>
                            </com.google.android.material.textfield.TextInputLayout>



                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />



            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_white">

            <!-- mBtn Add call Log-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mBtn_callLog_addCallLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_call_log"
                style="@style/coloredButton"
                app:backgroundTint="@color/main_light_grey"
                app:cornerRadius="50dp"
                android:textColor="@color/main_white"
                app:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- pb layout -->
    <include layout="@layout/pb_layout"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>