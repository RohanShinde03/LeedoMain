<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_projects_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="0dp">

        <!--Main Linear layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chb_projects_list"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="8dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center|start"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="0.2">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTv_projects_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:text="@string/project_name_"
                    style="@style/styleFontMediumText"
                    android:textSize="18sp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTv_projects_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    style="@style/styleFontRegularText"
                    android:textSize="16sp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.card.MaterialCardView>



</androidx.appcompat.widget.LinearLayoutCompat>

