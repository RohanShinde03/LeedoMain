<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Floors stats-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_itemFloors_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_white">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_itemFloor_floorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:theme="@style/styleFontBoldText"
                android:text="@string/floor" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_itemFloor_flatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/total_flats"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:theme="@style/styleFontMediumText" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.tribeappsoft.leedo.util.FlowLayout
            android:id="@+id/fl_itemFloor_addFlats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

        </com.tribeappsoft.leedo.util.FlowLayout>

        <View
            android:id="@+id/view_floor_end"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_margin="5dp"
            android:background="@color/card_outline" />



    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>