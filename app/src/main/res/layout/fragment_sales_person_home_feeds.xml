<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sr_fragSalesPersonHomeFeeds">
    <!--  android:background="@color/primaryColor" -->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cl_fragSalesPersonHomeFeed"
        android:fitsSystemWindows="true"
        tools:context="com.tribeappsoft.leedo.salesPerson.homeFragments.FragmentSalesPersonHomeFeeds">

        <!-- app bar layout -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_sales_person_homeFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:statusBarForeground="@color/black_full_transparent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_salesPerson_homeFeed"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Toolbar.TitleText"
                android:fitsSystemWindows="true"
                app:titleTextColor="@color/main_white"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
              android:background="@color/main_black"
            android:orientation="vertical">
            <!--  android:background="@drawable/feed_bg"-->

            <com.tribeappsoft.leedo.util.stickyScrollView.StickyScrollView
                android:id="@+id/nsv_fragSalesPersonHomeFeed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:stickyHeader="@+id/ll_fragmentSalesPersonHomeFeeds_searchBar"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
                <!--   app:stickyHeader="@id/ll_fragmentSalesPersonHomeFeeds_searchBar"-->
                <!--  android:background="@color/primaryColor" -->

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view_fragSalesPersonHomeFeed"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:visibility="gone"
                        android:background="@color/primaryColor"/>

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/FragmentHomeFeed_imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:sliderAnimationDuration="800"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="800"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="2dp"
                        app:sliderIndicatorRadius="1dp"
                        app:sliderIndicatorSelectedColor="@color/white"
                        app:sliderIndicatorUnselectedColor="@color/GrayLight"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true"
                        android:minHeight="200dp"
                        android:fitsSystemWindows="true" />
                    <!--   app:sliderAutoCycleDirection="right"-->

                    <!-- filter title -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_fragSalesPersonHomeFeeds_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@color/colorPrimary">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@color/colorPrimary"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_fragSalesPersonHomeFeeds_closeFilter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_close_black_24dp"
                                android:paddingTop="16dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="16dp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_fragSalesPersonHomeFeeds_filterTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/styleFontMediumText"
                                android:text="@string/title"
                                android:textColor="@color/main_white"
                                android:gravity="center|start"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:textSize="20sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- Search bar  -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_fragmentSalesPersonHomeFeeds_searchBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp">

                        <!-- Search bar -->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:background="@drawable/ic_rectangle_grey_more_round">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_FragmentHomeFeed_search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.73"
                                android:background="@color/black_full_transparent"
                                android:ellipsize="end"
                                android:gravity="center|start"
                                android:hint="@string/search"
                                android:textColorHint="@color/main_grey"
                                android:inputType="textPersonName"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="16sp"
                                android:theme="@style/styleFontMediumText"
                                android:imeOptions="actionSearch"
                                android:iconifiedByDefault="false"
                                />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_FragmentHomeFeed_clearSearch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:layout_gravity="start|center"
                                android:src="@drawable/ic_search_close_icon"
                                android:visibility="gone" />


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_FragmentHomeFeed_VoiceSearch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_margin="5dp"
                                android:layout_gravity="start|center"
                                android:src="@drawable/ic_record_sound_icon"
                                android:visibility="visible" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_fragSalesPersonHomeFeeds_addFeedData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="30dp"
                        android:clipToPadding="false"
                        android:visibility="visible">

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- <androidx.recyclerview.widget.RecyclerView
                         android:id="@+id/rv_fragSalesPersonHomeFeeds"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:paddingBottom="30dp"
                         android:cacheColorHint="@android:color/transparent"
                         android:clipToPadding="false"
                         android:visibility="gone"
                         tools:listitem="@layout/item_layout_inventory_docs"/>-->

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_fragSalesPersonHomeFeeds_loadingContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="40dp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:text="@string/hang_on_loading_content"
                            android:textAlignment="center"
                            android:textColor="@color/main_light_grey"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:theme="@style/styleFontMediumText" />


                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:indeterminate="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:indeterminateDuration="2000"
                            android:indeterminateTint="@color/main_white"
                            android:indeterminateTintMode="src_atop" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- ll no Data Found -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_fragSalesPersonHomeFeeds_noData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/ic_people_black_128dp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/styleFontMediumText"
                            android:text="@string/no_feeds"
                            android:textColor="@color/main_white"
                            android:gravity="center"
                            android:padding="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="20sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.tribeappsoft.leedo.util.stickyScrollView.StickyScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- ll-back to top -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_fragSalesPersonHomeFeeds_backToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:padding="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_feed_back_to_top"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_upward_white_24dp"
                android:contentDescription="@string/app_name"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back_to_top"
                android:textAlignment="center"
                android:textColor="@color/main_white"
                android:textSize="16sp"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:theme="@style/styleFontMediumText" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- pb layout -->
        <include layout="@layout/pb_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


