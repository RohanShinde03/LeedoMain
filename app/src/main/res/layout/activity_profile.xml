<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_profile"
    tools:context="com.tribeappsoft.leedo.profile.ViewProfileActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_viewProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ll_Main-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">


            <!--ll_User_photo-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/main_white"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!--User Profile_photo-->
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_ViewProfileActivity_edtProf_userImg"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:civ_border_color="@color/main_light_grey"
                        android:src="@drawable/ic_profile_default_user_icon" />
                    <ProgressBar
                        android:id="@+id/pb_ViewProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:visibility="gone"
                        android:indeterminateDuration="2000"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/main_black"
                        android:layout_gravity="center"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_ViewProfileActivity_edtProf_changeImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_edit_image_icon"
                        android:visibility="gone"
                        app:layout_anchor="@id/iv_ViewProfileActivity_edtProf_userImg"
                        app:layout_anchorGravity="bottom|end"
                        android:layout_marginBottom="1dp"
                        />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>


                <!--User info-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="62dp"
                    android:paddingEnd="15dp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!--User Name-->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_ViewProfileActivity_User_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_name"
                            android:theme="@style/styleFontMediumText"
                            android:textSize="22sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:lineSpacingExtra="5dp"
                            />
                        <!--User Position-->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_ViewProfileActivity_User_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_name"
                            android:theme="@style/styleFontMediumText"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:layout_marginBottom="15dp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:gravity="end"
                        android:layout_weight="7"                    >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_edit_profile"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:src="@drawable/ic_edit_profile_icon"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--User Info-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/primaryColor"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_gravity="center">


                <!--User Mobile & Email-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--User Mobile-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_ViewProfileActivity_User_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:theme="@style/styleFontMediumText"
                        android:textColor="@color/main_white"
                        android:textSize="20sp"
                        android:drawableStart="@drawable/ic_call_grey"
                        android:drawablePadding="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>


                    <!--User G-mail-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_ViewProfileActivity_User_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:theme="@style/styleFontMediumText"
                        android:textColor="@color/main_white"
                        android:textSize="20sp"
                        android:drawableStart="@drawable/ic_email_grey_24dp"
                        android:drawablePadding="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--Bottom Logo-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <!--Bottom Logo-->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/bg_black_outline_border_more_round"
                        android:layout_gravity="center"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_viewProfile_expandedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/main_black">

    </androidx.appcompat.widget.LinearLayoutCompat>


   <!-- <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="@string/app_name" />-->

    <com.tribeappsoft.leedo.util.TouchImageView
        android:id="@+id/iv_expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:fitsSystemWindows="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true" />


</FrameLayout>