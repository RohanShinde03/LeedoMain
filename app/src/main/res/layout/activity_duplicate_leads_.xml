<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sr_duplicateLeadList"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_white">

    <RelativeLayout
        android:id="@+id/rl_duplicateLeadList_searchBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_duplicateLeadList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="56dp"
            android:paddingBottom="75dp"
            android:cacheColorHint="@android:color/transparent"
            android:clipToPadding="false"
            tools:listitem="@layout/item_layout_synced_duplicate_leads" />

        <!-- Search bar & Filter  -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_duplicateLeadList_searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--search-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/ic_rectangle_light_grey_round">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_duplicateLeadList_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:textColor="@color/textColorPrimary"
                    android:gravity="center|start"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:hint="@string/search"
                    android:background="@color/black_full_transparent"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_search_icon"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:imeOptions="actionSearch"
                    />
                <!--     -->

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_duplicateLeadList_clearSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:tint="@color/main_medium_grey"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:src="@drawable/ic_close_black_24dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- ll no Data Found -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_duplicateLeadList_noData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:tint="@color/color_Gray"
                app:srcCompat="@drawable/ic_offline_lead_24"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_duplicateLeadList_noData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/styleFontMediumText"
                android:textColor="@color/main_medium_grey"
                android:text="@string/no_duplicate_leads_available"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_duplicateLeadList"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_drawable"
            android:indeterminateDuration="2000"
            android:indeterminateTint="@color/colorAccent"
            android:indeterminateTintMode="src_atop"
            android:layout_alignBottom="@id/rv_duplicateLeadList"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <!-- <com.google.android.material.button.MaterialButton
             android:id="@+id/mBtn_cuIDListBackToTop"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@id/rv_cuIdList"
             android:layout_alignEnd="@id/rv_cuIdList"
             android:text="@string/back_to_top"
             android:layout_margin="12dp"
             style="@style/coloredButton"
             app:icon="@drawable/ic_arrow_upward_white_24dp"
             app:iconPadding="5dp"
             android:textSize="16sp"
             android:visibility="visible"
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             app:textAllCaps="false"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:paddingTop="12dp"
             android:paddingBottom="12dp"
             app:cornerRadius="50dp"/>-->

        <!-- ll-back to top -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_duplicateLeadList_backToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_alignBottom="@id/rv_duplicateLeadList"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:padding="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_feed_back_to_top"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_upward_white_24dp"
                android:contentDescription="@string/app_name"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back_to_top"
                android:textAlignment="center"
                android:textColor="@color/main_white"
                android:textSize="16sp"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:theme="@style/styleFontMediumText" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>