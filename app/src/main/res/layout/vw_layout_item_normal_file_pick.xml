<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@drawable/vw_selector_ll_file"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ic_file"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/unknown_file" />

    <ImageView
        android:id="@+id/cbx"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/vw_selector_cbx_audio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/cbx"
        android:layout_toRightOf="@id/ic_file"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/styleFontMediumText"
            android:textColor="@color/BlackLight"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>
