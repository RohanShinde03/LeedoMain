<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_addBrochure"
    tools:context="com.tribeappsoft.leedo.admin.project_brochures.AddNewBrochureActivity">

    <!-- ll_add brochure main -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_newBrochure_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:isScrollContainer="true">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_grey"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- select Project text-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <!--Select Project Name-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:minLines="1"
                        android:ellipsize="end"
                        android:scrollbars="vertical"
                        android:hint="@string/select_project"
                        android:textColorHint="@color/grey_m"
                        android:theme="@style/styleFontMediumText">

                        <AutoCompleteTextView
                            android:id="@+id/acTv_newBrochure_select_project"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:maxLines="3"
                            android:minLines="1"
                            android:ellipsize="end"
                            android:scrollbars="vertical"
                            android:layout_margin="3dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/BlackLight"
                            android:focusable="false"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- brochure Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_newLead_title"
                    style="@style/TextInputLayout.OutlineBox.CustomFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/styleFontMediumText"
                    android:hint="@string/project_brochure_title"
                    android:textColorHint="@color/grey_m">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_addBrochure_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/grey_m"
                        android:theme="@style/styleFontMediumText"
                        android:textColor="@color/BlackLight"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- brochure description -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout.OutlineBox.CustomFont"
                    android:theme="@style/styleFontRegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_addBrochure_description"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="@string/project_brochure_description"
                        android:inputType="textMultiLine"
                        android:textColor="@color/BlackLight"
                        android:textColorHint="@color/grey_m"
                        android:theme="@style/styleFontMediumText"
                        android:scrollbars="vertical"
                        android:visibility="visible"
                        android:maxLines="10"
                        android:ellipsize="end"
                        android:gravity="start"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cv_item_BrochureDocs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white">

                    <!--brochure Documents-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:background="@color/main_white">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="start"
                                android:gravity="start"
                                android:layout_weight="1">

                                <!--project_brochure doc-->
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_addBrochure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/styleFontMediumText"
                                    android:layout_gravity="start"
                                    android:textSize="17sp"
                                    android:text="@string/project_brochure_"
                                    android:maxLines="2"/>
                                <!--Choose File-->
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_addBrochure_select_file"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/styleFontMediumText"
                                    android:layout_gravity="start"
                                    android:padding="1dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/main_grey"
                                    android:text="@string/no_file_choose"
                                    android:maxLines="2" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="end"
                                android:gravity="end">

                                <!--Upload File-->
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_addBrochure_browse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:src="@drawable/ic_attach"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"
                            android:background="@color/lighter"
                            android:layout_marginTop="5dp"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <!-- submit project brochure -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_white">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mBtn_addBrochure_submitBrochure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_brochure"
                style="@style/coloredButton"
                app:cornerRadius="50dp"
                app:backgroundTint="@color/main_light_grey"
                android:textColor="@color/main_white"
                app:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- pb layout -->
    <include layout="@layout/pb_layout_new"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
