<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tribeappsoft.leedo.admin.users.AllUsersActivity">

    <!-- rv -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sr_userList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_userList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="65dp"
            android:paddingBottom="70dp"
            android:visibility="visible"
            android:cacheColorHint="@android:color/transparent"
            android:clipToPadding="false"
            tools:listitem="@layout/item_layout_users_list"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <!--search-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_userList_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/ic_rectangle_light_grey_round">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_userList_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:textColor="@color/textColorPrimary"
            android:gravity="center|start"
            android:singleLine="true"
            android:layout_weight="1"
            android:hint="@string/search"
            android:background="@color/black_full_transparent"
            android:theme="@style/styleFontMediumText"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawablePadding="@dimen/dimen_5dp"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:imeOptions="actionSearch"
            />
        <!--     -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_userList_clearSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:visibility="gone"
            android:tint="@color/main_medium_grey"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:src="@drawable/ic_close_black_24dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pb_userList"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:indeterminate="true"
        android:layout_gravity="center|bottom"
        android:indeterminateDrawable="@drawable/progress_drawable"
        android:indeterminateDuration="2000"
        android:indeterminateTint="@color/main_white"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />

    <!-- ll no Data Found -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_userList_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:tint="@color/color_Gray"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_contacts_black_24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/styleFontMediumText"
            android:text="@string/no_users_found_"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/main_medium_grey"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--Fab Button-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/exFab_userList_createProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/colorPrimary"
        android:textColor="@color/main_white"
        android:contentDescription="@string/app_name"
        android:text="@string/add_new_user"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:visibility="visible"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        app:iconTint="@color/main_white"
        app:icon="@drawable/ic_user_white_24dp"
        app:iconSize="24dp"
        app:iconGravity="start"
        app:layout_anchor="@id/sr_userList"
        app:layout_anchorGravity="bottom|end"
        app:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/metropolis_medium"
        android:shadowColor="@color/colorAccent"
        android:letterSpacing="0.02"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:fabSize="normal"
        app:fabCustomSize="56dp"
        android:scaleType="center" />


    <!-- pb layout -->
    <include layout="@layout/pb_layout_new"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>