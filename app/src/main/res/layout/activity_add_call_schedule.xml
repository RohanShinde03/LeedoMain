<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_addCallSchedule"
    tools:context="com.tribeappsoft.leedo.admin.callSchedule.AddCallScheduleActivity">


    <!-- ll add call schedule main -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_addCallSchedule_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:isScrollContainer="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_grey"
                android:orientation="vertical">

                <!-- sales representative-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/main_white"
                    android:padding="15dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mTv_addCallSchedule_salesRepName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/def_sales_person_name"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:theme="@style/styleFontMediumText"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:gravity="center|start"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sales_representative"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/styleFontRegularText"
                        android:textSize="14sp"
                        android:gravity="center|start"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <!-- customer selection   -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:background="@color/main_white">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_customer_mobile_star"
                            android:theme="@style/styleFontMediumText"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <!--Select Customer ID-->
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/mTv_addCallSchedule_selectCustomer_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:hint="@string/mobile_no_star"
                            android:singleLine="true"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:background="@drawable/bg_outline_border_round_my_dob"
                            android:textSize="16sp"
                            android:focusable="false"
                            tools:ignore="PrivateResource" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/main_white">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/selected_customer_name"
                            android:theme="@style/styleFontMediumText"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/mTv_addCallSchedule_customerName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:padding="15dp"
                            android:hint="@string/full_name"
                            android:singleLine="true"
                            android:background="@drawable/bg_outline_border_round_my_dob"
                            android:textSize="16sp"
                            android:focusable="false"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <!-- date and time selection, remarks  -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white"
                    android:padding="15dp"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_addCallSchedule_callScheduleDate"
                        style="@style/TextInputLayout.OutlineBox.CustomFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconDrawable="@drawable/ic_date"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/call_schedule_date"
                        android:textColorHint="@color/grey_m"
                        android:theme="@style/styleFontMediumText"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_addCallSchedule_callScheduleDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="15sp"
                            android:textColor="@color/main_black"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_addCallSchedule_callScheduleTime"
                        style="@style/TextInputLayout.OutlineBox.CustomFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:layout_marginBottom="@dimen/dimen_12dp"
                        android:textColorHint="@color/grey_m"
                        android:theme="@style/styleFontMediumText"
                        app:endIconDrawable="@drawable/ic_access_time_black_24dp"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_addCallSchedule_callScheduleTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/call_schedule_time"
                            android:inputType="none"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textSize="15sp"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:textColor="@color/BlackLight"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- call schedule remarks -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_addCallSchedule_remarks"
                        style="@style/TextInputLayout.OutlineBox.CustomFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:theme="@style/styleFontMediumText"
                        android:hint="@string/call_schedule_remarks"
                        android:textColorHint="@color/grey_m">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_addCallSchedule_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:inputType="textPersonName|textMultiLine"
                            android:textColor="@color/BlackLight"
                            android:textColorHint="@color/grey_m"
                            android:theme="@style/styleFontMediumText"
                            android:maxLines="5"
                            android:ellipsize="end"
                            android:gravity="start"/>
                    </com.google.android.material.textfield.TextInputLayout>



                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <!-- submit  -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mBtn_addCallSchedule_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_call_schedule"
                style="@style/coloredButton"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:backgroundTint="@color/main_light_grey"
                android:textColor="@color/main_white"
                app:textAllCaps="false"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:cornerRadius="50dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- pb layout -->
    <include layout="@layout/pb_layout_new"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>