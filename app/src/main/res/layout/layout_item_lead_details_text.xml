<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <!-- Dynamic View -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_itemLeadDetails_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Generated by: "
            android:theme="@style/styleFontMediumText"
            android:textColor="@color/main_grey"
            android:textSize="12dp"
            android:singleLine="true"
            android:gravity="center|start"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_itemLeadDetails_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/main_black"
            android:text="Generated by name and his details"
            android:theme="@style/styleFontMediumText"
            android:textSize="14dp"
            android:gravity="center|start"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/view_visibleFor_call"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

    <View
        android:id="@+id/view_visibleFor_siteVisit"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

</androidx.appcompat.widget.LinearLayoutCompat>