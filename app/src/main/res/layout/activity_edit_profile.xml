<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tribeappsoft.leedo.profile.EditProfileActivity"
    android:background="@color/primaryColor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--ll_Main-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <!--ll_User_photo-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/profile_background"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <!--Close View-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_EditProfileActivity_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <!--User Profile_photo-->
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_EditProfileActivity_edtProf_userImg"
                        android:layout_width="140dp"
                        app:civ_border_color="@color/main_light_grey"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_profile_default_user_icon"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_EditProfileActivity_edtProf_changeImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_edit_image_icon"
                        android:visibility="visible"
                        app:layout_anchor="@id/iv_EditProfileActivity_edtProf_userImg"
                        app:layout_anchorGravity="bottom|end"
                        android:layout_marginBottom="1dp"
                        />
                    <ProgressBar
                        android:id="@+id/pb_editProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:visibility="gone"
                        android:indeterminateDuration="2000"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/main_black"
                        android:layout_gravity="center"/>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--User Info-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_gravity="center">


                <!--User Details-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Enter First Name-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_EditProfileActivity_user_firstName"
                        style="@style/temp_textInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_EditProfileActivity_user_firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textCursorDrawable="@null"
                            android:hint="@string/first_name"
                            android:textColor="@color/main_white"
                            android:singleLine="true"
                            android:textSize="18sp"
                            android:theme="@style/styleFontMediumText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Enter Middle Name-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_EditProfileActivity_user_middleName"
                        style="@style/temp_textInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_EditProfileActivity_user_middleName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textCursorDrawable="@null"
                            android:hint="@string/middle_name"
                            android:textColor="@color/main_white"
                            android:singleLine="true"
                            android:textSize="18sp"
                            android:theme="@style/styleFontMediumText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Enter last Name-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_EditProfileActivity_user_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/temp_textInputLayout"
                        android:textColorHint="@color/main_medium_grey"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_EditProfileActivity_user_lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/styleFontMediumText"
                            android:textCursorDrawable="@null"
                            android:hint="@string/Last_name"
                            android:textColor="@color/main_white"
                            android:singleLine="true"
                            android:textSize="18sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <!-- cpp layout -->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_newLead_refMobCcp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_outline_border_round_my_dob_profile"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="6dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:clickable="true"
                            android:focusable="true"

                            android:orientation="horizontal">

                            <!-- country code picker -->
                            <!--<include layout="@layout/ccp_layout_code_picker" />-->

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_newLead_refCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                style="@style/styleFontRegularText"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="(IN) +91"
                                android:textColor="@color/main_medium_grey"
                                android:textSize="13dp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_newLead_refCountryArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:alpha="0.6"
                                android:visibility="gone"
                                android:background="@drawable/ripple_effect"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:tint="@color/main_medium_grey" />



                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <!--Enter User Mobile-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_EditProfileActivity_user_mobile"
                            style="@style/temp_textInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_EditProfileActivity_user_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textCursorDrawable="@null"
                                android:hint="@string/enter_mobile_number"
                                android:textColor="@color/main_white"
                                android:singleLine="true"
                                android:textSize="18sp"
                                android:theme="@style/styleFontMediumText"
                                android:inputType="phone"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <!--Enter User Email-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_EditProfileActivity_user_email"
                        style="@style/temp_textInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_EditProfileActivity_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/styleFontMediumText"
                            android:textCursorDrawable="@null"
                            android:hint="@string/email_address"
                            android:textColor="@color/main_white"
                            android:singleLine="true"
                            android:textSize="18sp"
                            android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="@string/gender"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main_medium_grey"
                        android:theme="@style/styleFontMediumText"
                        android:layout_gravity="start"
                        android:gravity="start"/>

                    <RadioGroup
                        android:id="@+id/rg_editProf_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_editProf_male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:checked="true"
                            app:useMaterialThemeColors="false"
                            style="@style/MyRadioButtonStyleProfileSelected"
                            android:fontFamily="@font/metropolis_medium"
                            android:textColor="@color/main_medium_grey"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"
                            android:textSize="16sp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_editProf_female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            app:useMaterialThemeColors="false"
                            style="@style/MyRadioButtonStyleProfileSelected"
                            android:fontFamily="@font/metropolis_medium"
                            android:textColor="@color/main_medium_grey"
                            android:layout_marginLeft="0dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"
                            android:textSize="16sp"/>
                    </RadioGroup>

                    <!-- lead dob -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/date_of_birth_edit_profile"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main_medium_grey"
                        android:theme="@style/styleFontMediumText"
                        android:layout_gravity="start"
                        android:gravity="center|start"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outline_border_round_my_dob_profile"
                        android:gravity="center|start"
                        android:padding="18dp"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <com.tribeappsoft.leedo.util.customDatePicker.MyLocalDatePicker
                            android:id="@+id/mdp_profileUpdate_leadBirthDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mdp_text_color="@color/main_white"
                            app:mdp_date_format="dd-mm-yyyy" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                     <!--Submit Button-->
                     <com.google.android.material.button.MaterialButton
                         android:id="@+id/mBtn_EditProfile_submit"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         style="@style/Widget.AppCompat.Button.Colored"
                         android:textColor="@color/main_black"
                         app:backgroundTint="@color/main_white"
                         app:cornerRadius="24dp"
                         android:paddingRight="40dp"
                         android:paddingLeft="40dp"
                         android:paddingTop="10dp"
                         android:paddingBottom="10dp"
                         android:text="@string/submit"
                         android:textAllCaps="false"
                         android:textSize="18sp"
                         android:theme="@style/styleFontMediumText"
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:layout_marginBottom="30dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <!--Bottom Logo-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">
                    <!--Bottom Logo-->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/bg_black_outline_border_more_round"
                        android:layout_gravity="center"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

    <!-- pb layout -->
    <include layout="@layout/pb_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>