<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayout.OutlineBox.CustomFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_myDatePicker">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_mDatePicker_date"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:drawableEnd="@drawable/ic_date_picker"
            android:backgroundTint="@color/colorPrimary"
            android:hint="@string/date_of_birth"
            android:fontFamily="@font/metropolis_light"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:inputType="number|none"
            android:textSize="0sp"
            tools:ignore="Autofill,LabelFor,TextFields" />

    </com.google.android.material.textfield.TextInputLayout>



  <!--  <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/layout_lazy_date_picker"
        android:background="@null"
        android:cursorVisible="false"
        android:digits="0123456789"
