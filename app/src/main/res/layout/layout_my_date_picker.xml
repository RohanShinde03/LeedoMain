    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_myDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:layout_marginRight="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_day"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_day"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Space
            android:layout_width="@dimen/my_date_picker_width_space"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_month"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_month"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Space
            android:layout_width="@dimen/my_date_picker_width_space"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_year"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_year"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_year"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/my_date_picker_width_case"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_date_picker_width_margin"
            android:layout_marginEnd="@dimen/my_date_picker_width_margin"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_date_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdp_year"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_my_date_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_date_picker_height_focus"
                android:background="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_date_picker_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="01 jav. 1900" />

    <View
        android:id="@+id/btn_my_date_picker_on_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/layout_myDatePicker"
        android:layout_alignLeft="@+id/layout_myDatePicker"
        android:layout_alignTop="@+id/layout_myDatePicker"
        android:layout_alignEnd="@+id/layout_myDatePicker"
        android:layout_alignRight="@+id/layout_myDatePicker"
        android:layout_alignBottom="@+id/layout_myDatePicker" />

</RelativeLayout>