<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tribeappsoft.leedo.salesPerson.bookings.HoldFlatDetailsActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_white"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_holdFlatDetails_cuIdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:letterSpacing="0.1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/def_cuID_number"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:theme="@style/styleFontMediumText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_holdFlatDetails_customerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Mr.Sukrut Mujumdar"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="7dp"
                    android:textAlignment="textStart"
                    android:gravity="center|start"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:theme="@style/styleFontMediumText" />


                <!--Project Name-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_holdFlatDetails_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/def_mob_number"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/ic_phone_android_black_24dp"
                    android:drawablePadding="7dp"
                    android:drawableEnd="@drawable/ic_call_green_24dp"
                    android:textColor="@color/main_dark_grey"
                    android:textSize="16sp"
                    android:theme="@style/styleFontMediumText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_holdFlatDetails_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/user_email"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:drawablePadding="7dp"
                    android:textColor="@color/main_dark_grey"
                    android:textSize="16sp"
                    android:theme="@style/styleFontMediumText" />



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/ic_rectangle_light_grey_round"
                    android:padding="15dp"
                    android:layout_margin="15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ghp_number"
                        android:theme="@style/styleFontMediumText"
                        android:textSize="15sp"
                        android:textColor="@color/main_grey"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_holdFlatDetails_tokenNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/def_ghp_number"
                        android:theme="@style/styleFontBoldText"
                        android:textSize="18sp"
                        android:gravity="center|start"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"/>


                </androidx.appcompat.widget.LinearLayoutCompat>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/card_outline" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/selected_flat_colon"
                    android:gravity="center|start"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:theme="@style/styleFontMediumText" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_outline_border_round_my_dob">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_holdFlatDetails_unit_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A-201  |  2 Bhk"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/color_flat_available"
                        android:textSize="22sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:drawablePadding="10dp"
                        android:theme="@style/styleFontBoldText" />


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_building"
                            android:contentDescription="@string/app_name"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_holdFlatDetails_project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YashOne Wakad"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@color/primaryColor"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:theme="@style/styleFontMediumText" />


                    </androidx.appcompat.widget.LinearLayoutCompat>








                </androidx.appcompat.widget.LinearLayoutCompat>



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mBtn_holdFlatDetails_holdFlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_hold_flat"
                    style="@style/coloredButton"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:textAllCaps="false"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:cornerRadius="50dp"
                    android:visibility="visible"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>



    </androidx.appcompat.widget.LinearLayoutCompat>


    <!-- pb layout -->
    <include layout="@layout/pb_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>