            <!--Allotments -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1.2">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTv_tl_stats_allotments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/floor"
                    android:theme="@style/styleFontBoldText"
                    android:textSize="12sp"
                    android:textColor="@color/color_claim_now_success_green"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#D8D8D8"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1.2">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTv_tl_stats_cancelledAllotments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/floor"
                    android:theme="@style/styleFontBoldText"
                    android:textSize="12sp"
                    android:textColor="@color/main_grey"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:id="@+id/view_line_tl_stats"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#D8D8D8"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>