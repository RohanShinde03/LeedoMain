<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <!--Date-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_itemProjectDocs_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/card_text_date"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center|end"
        android:theme="@style/styleFontMediumText"
        android:textColor="@color/color_card_date"
        android:textSize="12sp" />

    <com.google.android.material.card.MaterialCardView
    android:id="@+id/cv_itemProjectDocs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/transition_string"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/card_outline"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_itemProjectDocs_docImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:minHeight="150dp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:srcCompat="@color/main_light_grey" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_itemProjectDocs_docName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/card_title"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:theme="@style/styleFontBoldText"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_itemProjectDocs_docDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/card_title"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:paddingStart="3dp"
                    android:theme="@style/styleFontMediumText"
                    android:lineSpacingExtra="5dp"
                    />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|end">

                    <!-- download document -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|end"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true">

                        <ProgressBar
                            android:id="@+id/pb_itemProjectDocs_downloadDoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center|end"
                            style="?android:attr/progressBarStyleSmall"
                            android:visibility="gone"
                            android:indeterminateDuration="2000"
                            android:indeterminate="true"
                            android:indeterminateTintMode="src_atop"
                            android:indeterminateTint="@color/colorAccent" />
                        <!--  style="@style/Widget.AppCompat.ProgressBar" -->

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_itemProjectDocs_downloadIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_get_app_black_24dp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- share document -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_itemProjectDocs_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="16dp"
                        android:padding="5dp"
                        android:gravity="center|end"
                        android:drawableStart="@drawable/ic_share_black_24dp"
                        android:drawablePadding="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:theme="@style/styleFontMediumText"
                        android:textSize="16dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>



</com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>