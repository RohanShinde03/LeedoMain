<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_imgPicker_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vw_selector_ll_file">
    <!-- android:background="@color/vw_BgItem"-->

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/vw_ic_camera"
        android:visibility="invisible" />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_thirty_transparent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/cbx"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/vw_selector_cbx" />

</RelativeLayout>
