<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_callStatDetails"
    tools:context="com.tribeappsoft.leedo.admin.reports.callLogStats.detailedStatsList.FilterCallStatsDetailsActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_callStatsDetailsFilterMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <!-- lead status -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_itemLead_filter_count_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="2"
                android:padding="16dp"
                android:text="@string/_4_filters_applied"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:theme="@style/styleFontMediumText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_itemLead_SiteVisitDetails_ec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/colorAccent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_keyboard_arrow_down_black_36dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Filter details -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_site_visit_details_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_callDetailsSalesNameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/baground_border_primary_dark_more_rounded"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/white"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Name"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_LeadDetailsProjectLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/baground_border_primary_dark_more_rounded"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_name__"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/styleFontMediumText"
                    android:text="@string/Name"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_LeadDetailsFromDateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/baground_border_primary_dark_more_rounded"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from_date_"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/white"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_LeadDetailsToDateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/baground_border_primary_dark_more_rounded"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to_date_"
                    android:textColor="@color/white"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_to_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:theme="@style/styleFontMediumText"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sr_callStatDetails">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_callStatDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="75dp"
                android:cacheColorHint="@android:color/transparent"
                android:clipToPadding="false"
                tools:listitem="@layout/item_layout_scheduled_calls" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <!-- Search bar -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_callStatDetails_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/ic_rectangle_light_grey_round">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_callStatDetails_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.73"
            android:background="@color/black_full_transparent"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:hint="@string/search"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:imeOptions="actionSearch"
            android:theme="@style/styleFontRegularText" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_callStatDetails_clearSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_search_close_icon"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pb_callStatDetails"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:indeterminate="true"
        android:layout_gravity="center|bottom"
        android:indeterminateDrawable="@drawable/progress_drawable"
        android:indeterminateDuration="2000"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_atop"
        android:layout_alignBottom="@id/rv_callStatDetails"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <!-- ll-back to top -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_callStatDetails_backToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_alignBottom="@id/rv_callStatDetails"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_feed_back_to_top"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward_white_24dp"
            android:contentDescription="@string/app_name"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_to_top"
            android:textAlignment="center"
            android:textColor="@color/main_white"
            android:textSize="16sp"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:theme="@style/styleFontMediumText" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <!-- ll-no data -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_callStatDetails_noData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerInParent="true">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:tint="@color/color_Gray"
            app:srcCompat="@drawable/lead_call"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_callStatDetails_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/styleFontMediumText"
            android:text="@string/no_scheduled_list_available"
            android:textColor="@color/main_medium_grey"
            android:gravity="center"
            android:padding="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>