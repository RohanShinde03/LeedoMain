    <item>

        <shape android:shape="oval">
            <solid android:color="@color/color_claim_now_red" />
            <!-- Set the same value for both width and height to get a circular shape -->
            <size android:width="200dp" android:height="200dp"/>
        </shape>
    </item>
</selector>


